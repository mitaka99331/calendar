{% if renderDay %}
    {% if disableAppointments %}

        <td class="border p-1 h-40 xl:w-40 lg:w-30 md:w-30 sm:w-20 w-10 overflow-auto bg-gray-100">
            <div
                class="flex flex-col h-96 w-full overflow-hidden">
                <div class="top h-14 w-full">
                    <span class="text-blue-500 text-3xl font-bold">{{ day.dateNumber }}</span>
                </div>

                {% for hourInfo in workHors %}
                    {% if hourInfo.taken %}

                    <div class="w-full border my-0.5 py-1  transition  flex justify-between bg-red-100">
                        <span class="text-gray-500 px-2">{{ hourInfo.hour }}</span>
                        <span class="text-white flex-grow text-left px-2 font-bold">Taken</span>
                    </div>
                {% else %}
                    <div class="w-full border my-0.5 py-1  transition  flex justify-between bg-green-50">
                        <span class="text-gray-500 px-2">{{ hourInfo.hour }}</span>
                    </div>
                    {% endif %}
                {% endfor %}
            </div>
        </td>
    {% else %}
        <td class="border p-1 h-40 xl:w-40 lg:w-30 md:w-30 sm:w-20 w-10 overflow-auto {% if currentDate %} bg-blue-200 {% endif %}">
            <div
                class="flex flex-col h-96 w-full overflow-hidden">
                <div class="top h-14 w-full">
                    <span class="text-blue-500 text-3xl font-bold">{{ day.dateNumber }}</span>
                </div>

                {% for hourInfo in workHors %}
                    {% if hourInfo.taken %}
                        <div class="w-full border my-0.5 py-1  transition  flex justify-between  bg-red-100">
                            <span class="text-gray-500 px-2">{{ hourInfo.hour }}</span>
                            <span class="text-gray-500 flex-grow text-left px-2  font-bold">Taken</span>
                        </div>
                    {% else %}
                        <button data-modal-target="appointment-modal" data-modal-toggle="appointment-modal"
                                type="button"
                                onclick="document.getElementById('date').setAttribute('value', '{{ appointmentDate ~ ' ' ~  hourInfo.hour }}');"
                                class="w-full border my-0.5 py-1  transition cursor-pointer duration-500 ease hover:bg-green-200 flex justify-between  bg-green-100">
                            <span class="text-gray-500 px-2">{{ hourInfo.hour }}</span>
                        </button>
                    {% endif %}

                {% endfor %}
            </div>
        </td>
    {% endif %}

{% else %}
    <td class="border p-1 h-40 xl:w-40 lg:w-30 md:w-30 sm:w-20 w-10 overflow-auto  bg-gray-100">
        <div
            class="flex flex-col h-40 mx-auto xl:w-40 lg:w-30 md:w-30 sm:w-full w-10 mx-auto overflow-hidden">
        </div>
    </td>
{% endif %}
